<% include ./partials/header.ejs %>
<% include ./partials/animation.ejs%>
<% include ./partials/flash.ejs %>

<div class="ui middle aligned center aligned grid" style="background-image: url('/img/login.jpeg')">
    <div class="column">
        <form class="ui large form" action="/login" method="post">
            <div class="ui stacked segment">
                <h2 class="ui teal image header">
                    <div class="content">
                        Log-in to your account
                    </div>
                </h2>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input type="text" name="username" placeholder="Username" required>
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input type="password" name="password" placeholder="Password" required>
                    </div>
                </div>
                <div class="ui fluid large teal submit button">Login</div>
            </div>
            <div class="ui error message"></div>
        </form>
        <div class="ui message">
            New to us? <a href="/signup">Sign Up</a>
        </div>
        <div class="ui message">
            Back to homepage -> <a href="/">click here</a>
        </div>
    </div>
</div>
<!--closing tag of div with id=box which is opened in animation.ejs -->
</div>

<link href="https://fonts.googleapis.com/css?family=Bangers" rel="stylesheet">
<link rel="stylesheet" href="/css/login.css">
<script src="/js/login.js"></script>
</body>
</html>